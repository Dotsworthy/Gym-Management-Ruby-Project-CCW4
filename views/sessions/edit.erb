<h2>Update Session</h2>
<div></div>
<div class="form-wrapper">
<form method = "post" action ="/sessions/<%= @session.id %>">

  <div class="field">
  <label for = "type">Session Type:</label>
  <input id= "type" type="test" name="type" value= "<%= @session.type %>"/>
  </div>

  <div class="field">
  <label for = "starts at">Starts at:</label>
    <input id= "starts at" type="time" name="starts_at" value= "<%= @session.starts_at %>"/>
    </div>

    <div class="field">
  <label for = "date">Date:</label>
    <input id= "date" type="date" name="on_date" value= "<%= @session.on_date %>"/>
    </div>

    <div class="field">
    <label for = "capacity">Trainer:</label>
      <select id="trainer" name="led_by">
      <option value="<% @session.led_by %>"selected disabled hidden> <%= @trainer.pretty_name() %></option>
        <% @trainers.each do |trainer| %>
      <option value= "<%= trainer.id()%>" >
        <%=trainer.pretty_name()%> </option>
        <% end %>
  </select>
  </div>

  <input class="new" type="submit" value="Update Session"/>
