<h2>Add New Session</h2>

<form class="form-wrapper" method = "post" action ="/sessions">

  <label for = "type">Session Type:</label>
    <input id= "type" type="test" name="type"/>

  <label for = "starts at">Starts at:</label>
    <input id= "starts at" type="time" name="starts_at"/>

  <label for = "date">Date:</label>
    <input id= "date" type="date" name="on_date"/>

  <label for = "capacity">Trainer:</label>
    <select id="trainer" name="led_by">
  <% @trainers.each do |trainer| %>
  <option value= "<%= trainer.id()%>" >
  <%=trainer.pretty_name()%> </option>
  <% end %>
</select>

  Recurring Sessions:
<label for = "recurring">Number of weeks to repeat:</label>
  <input id= "recurring" type="number" name="recurring" min="0" max="52" value="0"/>

  <input class="new" type="submit" value="Add Session"/>
</form>
