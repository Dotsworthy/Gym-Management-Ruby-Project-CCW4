<h1>Gym Members</h1>
<h2>Member Search</h2>
<div class="member-title-wrapper">
  <h2>Member List</h2>
  <a class="button" href="members/new">Add New Member</a>
</div>

<div class="members-form-wrapper">
  <form method="get" action ="/members/filtered-by-search">
    <div class="field">
      <input class="search-bar" type="text" name="search" value="">
      <input class ="submit" type="submit" value="Search">
    </div>
  </form></div>
  <table class="table-container">
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
    <% if @members != "No results" then %>
    <% for member in @members %>
    <tr>
      <td><a href="/members/<%= member.id%>"><%= member.user_name %></a></td>
      <td><%= member.first_name %></td>
      <td><%= member.last_name %></td>
    </tr>
    <% end %>
    <% else %>
    <%= "No Results" %>
    <% end %>
  </table>
