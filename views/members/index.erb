<h1>Gym Members</h1>
<h2>Member Search</h2>
<div class="member-title-wrapper">
  <h2>Member List</h2>
  <a class="button" href="members/new">Add New Member</a>
</div>

<div class="members-form-wrapper">
  <form method="get" action ="/members">
    <div class="field">
      <input class="search-bar" type="text" name="name_query" value="">
      <input class ="submit" type="submit" value="Search">
    </div>
  </form>
</div>
<table class="table-container">
    <% if @members.length > 0 then %>
  <tr>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
  </tr>
    <% for member in @members %>
  <tr>
    <td><a href="/members/<%= member.id%>"><%= member.user_name %></a></td>
    <td><%= member.first_name %></td>
    <td><%= member.last_name %></td>
  </tr>
    <% end %>
  <% else %>
  <p><%= "No Results" %></p>
  <% end %>
</table>
